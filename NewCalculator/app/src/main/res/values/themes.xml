<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="parent_button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/dark_yellow</item>
    </style>

    <style name="simple_button" parent="parent_button">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="land_simple_button" parent="parent_button">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="fun_button" parent="parent_button">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="land_fun_button" parent="parent_button">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="simple_row">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="land_simple_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_margin">0dp</item>
    </style>
<style name = "Theme.AppCompat.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>
</resources>